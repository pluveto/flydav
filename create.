#!/bin/bash

# 创建目录
mkdir -p cmd/flydav
mkdir -p internal/hub
mkdir -p internal/core
mkdir -p internal/webdav
mkdir -p internal/http_index
mkdir -p internal/ui
mkdir -p internal/auth
mkdir -p internal/config
mkdir -p internal/logger
mkdir -p pkg/api
mkdir -p pkg/storage
mkdir -p pkg/authenticator

# 创建文件
touch cmd/flydav/main.go
touch go.mod
touch go.sum
touch Dockerfile
touch config.yaml

echo "文件和目录创建完成。"
